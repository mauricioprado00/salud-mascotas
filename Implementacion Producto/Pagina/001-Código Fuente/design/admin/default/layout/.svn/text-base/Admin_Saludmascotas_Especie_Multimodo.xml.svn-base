<layout>
	<list_admin_especie>
		<reference in="superadmin" name="listado_datos_grid"
			toolbar_edit_url="administrator/especie/addEdit,id"
			toolbar_delete_url="administrator/especie/delete,id">
		</reference>
		<reference name="listado_datos_grid"
			caption="Listado de especie"
			source="administrator/especie/datalist"
			sort_name="id"
			sort_order="asc"
			can_edit="false"
			can_add="false"
			can_delete="false"
			full_width="true"
			toolbar="top">
			<block custom_type="boton"
				titulo="Buscar"
				action_js="jQuery(&quot;###table_id##&quot;).searchGrid( {sopt:['cn','bw','eq','ne','lt','gt','ew']} );" />
			<action named_args="true" method="addColumn">
				<title>Acciones</title>
				<name>acciones</name>
				<index>acciones</index>
				<width>82</width>
				<align>left</align>
				<sortable>false</sortable>
				<hideinexport>1</hideinexport>
			</action>
			<action named_args="true" method="addColumn">
				<title>Inv No</title>
				<name>id</name>
				<index>id</index>
				<width>47</width>
				<align>left</align>
				<sortable>true</sortable>
			</action>
			<action named_args="true" method="addColumn">
				<title>Nombre</title>
				<name>nombre</name>
				<index>nombre</index>
				<width>350</width>
				<align>left</align>
				<sortable>true</sortable>
			</action>
		</reference>
	</list_admin_especie>
	<addedit_admin_especie>
		<reference name="contenedor_main">
			<block
				type="Admin/AddEditForm"
				action_url="especie/addEdit"
				ajax_target=".contenedor_main"
				ajax_replace_with="true"
				validador_js="validar_agregar_especie"
				method="post">
				<tabset>
					<tab title="Datos de especie">
						<block name="especie_add_edit_form" type="template" template="especie/add.phtml" ></block>
					</tab>
				</tabset>
			</block>
		</reference>
	</addedit_admin_especie>
</layout>