			if(jqmotivo.length){
				var jqmotivoingresado = jQuery(this).parents('.pregunta').find('textarea');
				if(jqmotivoingresado.length){
					jqmotivo.val(jqmotivoingresado.val());
				}
			}
			jQuery('#'+form_id+' #estado').val(opciones.estado);
