		try{
			eval('options='+data);
		}
		catch(e){
			alert("kradkk");
			return;
		}
		options.value = jQuery(options.target).val();
		options.slide = function(event, ui){
			var val = ui.value;
			if(options.fixed){
				val = (new Number(parseFloat(val))).toFixed(options.fixed);
			}
			if(options.value_sufix)
				val += options.value_sufix;
			jQuery(options.target).val(val);
		}
		jQuery(this).slider(options);
		var valor = jQuery(options.target).val();//esto es para actualizar la visualizaciÃ³n en la ediciÃ³n cuando se carga el form
		valor = parseInt(valor);
		valor = isNaN(valor)?0:valor;
