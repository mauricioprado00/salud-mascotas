						<action method="addIconType">
							<name>yellow</name>
							<file>img/pin/pin_yellow.png</file>
							<hotspot>bottom,right</hotspot>
						</action>
						<action method="addIconType">
							<name>green</name>
							<file>img/pin/pin_green.png</file>
							<hotspot>bottom,right</hotspot>
						</action>
						<action method="addIconType">
