<?php return; endif; ?> 
<ul class="listado_mascotas listado_mascotas_reencuentros_reportados listado_mascotas_reencuentros_reportados_encuentro">
	<?php foreach($reencuentros as $idx=>$reencuentro): $class = $idx%2?'pair':'even'; ?> 
	<li class="mascota_item mascota_item_<?php print $class; ?>">
		<?php
		$encuentro = $reencuentro->getEncuentro();
		echo $this->getChild('encuentro_view')
			->setEncuentro($encuentro)
			->setReencuentro($reencuentro)
			->toHtml()
		;
		?> 
		<a class="link_confirmar_reencuentro" href="<?php print $this->getUrl(Frontend_Mascota_Reencuentro_Helper::getUrlConfirmar($id_mascota_perdida, $reencuentro->getId())); ?>">Confirmar coincidencia</a>
	</li>
	<?php endforeach; ?> 
</ul>
